config easymesh 'global'
	option enabled '0'
	option role 'master'
	option backhaul 'wired'
	option mesh_id 'OpenWrt-Mesh'
	option mesh_key 'meshpassword'
	option mesh_band '5g'
	option ssid 'OpenWrt'
	option key 'password'
	option ieee80211r '1'
	option mobility_domain 'aabb'
	option ieee80211k '1'
	option ieee80211v '1'
	option wireless_onboard '0'
	option wireless_onboard_ssid ''
	# Dedicated backhaul radio (tri-band: use second 5GHz radio for backhaul only)
	option dedicated_backhaul '0'
	option backhaul_band '5g_2'
	# DFS/ACS
	option dfs_enable '1'
	option acs_exclude_dfs '0'

config easymesh 'advanced'
	option roam_cooldown_time '30'
	option push_max_retries '3'
	option push_retry_backoff '2'
	option http_timeout '5'

{
	"luci-app-wizard": {
		"description": "Grant UCI access for luci-app-wizard",
		"read": {
			"uci": [ "file" ],
			"file": {
				"/etc/hosts": [ "read" ],
				"/etc/config/*": [ "read" ],
				"/etc/rc.local": [ "read" ],
				"/etc/dnsmasq.conf": [ "read" ],
				"/etc/crontabs/root": [ "read" ]
			},
			"ubus": {
				"file": [ "read" ]
			}
		},
		"write": {
			"uci": [ "file" ],
			"file": {
				"/etc/hosts": [ "write" ],
				"/etc/rc.local": [ "write" ],
				"/etc/config/*": [ "write" ],
				"/etc/dnsmasq.conf": [ "write" ],
				"/etc/crontabs/root": [ "write" ],
				"/sbin/wifi": [ "exec" ],
				"/etc/init.d/*": [ "exec" ]
			},
			"ubus": {
				"file": [ "write" ]
			}
		}
	}
}

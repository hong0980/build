{
	"luci-app-aria2": {
		"description": "Grant UCI access for luci-app-aria2",
		"read": {
			"ubus": {
				"service": [ "list" ]
			},
			"file": {
				"/bin/df": [ "exec" ],
				"/etc/passwd": [ "read" ],
				"/sbin/logread": [ "exec" ],
				"/usr/bin/aria2c": [ "exec" ]
			},
			"uci": [ "aria2" ]
		},
		"write": {
			"file": {
				"/*/aria2.log": [ "write" ]
			},
			"uci": [ "aria2" ]
		}
	}
}
